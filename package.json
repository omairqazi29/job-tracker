{
  "name": "job-tracker",
  "version": "1.0.0",
  "description": "Full-stack job application tracker helping job seekers organize their search",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
